server { # simple reverse-proxy
    listen 80;
    server_name localhost;
    
    # serve static files
    location /  {
        root    /usr/share/nginx/html;
        expires 30d;
    }

    # pass requests for dynamic content to rails/turbogears/zope, et al
    location /api {
        proxy_pass      http://localhost:5000;
    }
}